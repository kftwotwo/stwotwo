<%= form_for @opportunity do |f| %>

  <%= f.label :opportunity_name %>
  <%= f.text_field :opportunity_name %>

  <%= f.label :opportunity_description %>
  <%= f.text_field :opportunity_description %>

  <%= f.label :opportunity_solution %>
  <%= f.select(:opportunity_solution, options_for_select([['New Hire Training', 'New Hire Training'], ['Product/Tools Training', 'Product/Tools Training'], ['Skill/Behavior Training', 'Skill/Behavior Training'], ['Leadership Training', 'Leadership Training'], ['Consult for a training program', 'Consult for a training program'], ['Facilitation assistance', 'Facilitation assistance'], ['Trainer/Facilitation Training', 'Trainer/Facilitation Training']])) %>

  <%= f.label :opportunity_solution_description %>
  <%= f.text_field :opportunity_solution_description %>


  <%= f.submit %>
<% end %>
