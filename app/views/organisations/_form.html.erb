<%= form_for @organisation do |f| %>
  <%= f.label :name_of_organisation %>
  <%= f.text_field :name_of_organisation %>

  <%= f.label :description_of_organisation %>
  <%= f.text_field :description_of_organisation %>

  <%= f.label :organisation_email %>
  <%= f.text_field :organisation_email %>

  <%= f.label :organisation_phone %>
  <%= f.text_field :organisation_phone %>

  <%= f.label :organisation_website %>
  <%= f.text_field :organisation_website %>

  <%= f.label :street %>
  <%= f.text_field :street %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip_code %>
  <%= f.text_field :zip_code %>

  <%= f.label :country %>
  <%= f.text_field :country %>

  <%= f.submit %>
<% end %>
