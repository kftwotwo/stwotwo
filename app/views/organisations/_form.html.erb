<%= form_for @organisation do |f| %>
  <div class="col s6">
    <%= f.label :name_of_organisation %>
    <%= f.text_field :name_of_organisation %>
  </div>

  <div class="col s6">
    <%= f.label :organisation_email %>
    <%= f.email_field :organisation_email %>
  </div>

  <div class="col s6">
    <%= f.label :organisation_phone %>
    <%= f.telephone_field :organisation_phone %>
  </div>

  <div class="col s6">
    <%= f.label :organisation_website %>
    <%= f.url_field :organisation_website %>
  </div>

  <div class="col s3">
    <%= f.label :street %>
    <%= f.text_field :street %>
  </div>

  <div class="col s3">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="col s2">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="col s2">
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %>
  </div>

  <div class="col s2">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>

  <%= f.label :description_of_organisation %>
  <%= f.text_area :description_of_organisation, class: 'materialize-textarea'%>


  <%= f.submit "Next" %>
<% end %>
